{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "lib": ["DOM", "ES2020"],
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "useDefineForClassFields": false
    },
    "include": ["src/**/*.ts"]
  }
  